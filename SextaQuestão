#include <stdio.h>
#include <string.h>

void inverter_string(char *str) {
    int i, j;
    char temp;

    for (i = 0, j = strlen(str) - 1; i < j; i++, j--) {
        temp = str[i];
        str[i] = str[j];
        str[j] = temp;
    }
}

int main() {
    char str[100];

    printf("Digite uma string: ");
    scanf("%[^\n]s", str);

    inverter_string(str);

    printf("A string invertida Ã©: %s\n", str);

    return 0;
}
